/* pages/exam/exam.wxss */
page{
  font: 18px/1.5 'Microsoft YaHei';
  height: 100%;
  background-color: rgb(229, 233, 237);
}
.title{
  height: 20%;
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 40rpx 20rpx 20rpx 20rpx;
  padding: 20rpx;
  justify-content: center;
}
.chooseBtn{
  /* margin: 20rpx;
  border-radius: 10rpx; */
  margin: 30rpx;
}
.controlWrap{
  width: 100%;
  height: 10%;
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.controlWrap button{
  width: 50%;
  margin: 10rpx;
  padding: 0;
}
.showBtn{
  width: 60%;
}
button{
  border-radius: 30rpx;
  border: solid #B4B7BA 8rpx;
  padding: 0;
}
text{
  width: 600rpx;
  display: block;
  margin: 20rpx auto;
}