/* pages/Cyuyan/Cyuyan.wxss */
page{
    height: 100%;
}
.title{
    height: 30%;
}
.title image{
    width: 100%;
    display: flex;
    border-radius: 20rpx;
}
.content_text{
  margin-top: 40rpx;
    padding: 20rpx;
}
.audio_container {
    height: 15%;
    width: 100%;
    padding-top: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1rpx solid #e4e4e4;
    position:fixed; 
    bottom:0;
    background: #fff;
    z-index: 999;
}
.audio_container .text{
    margin-left: 200rpx;
    justify-content: center;
    font-size: 30rpx;
}
   
.audio_progress{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 10rpx;
}
   
.audio_progress slider{
    width: 80%;
    margin-left: 50rpx;
}
   
.audio_progress .musicTime{
    margin-bottom: 20rpx;
    justify-content: end;
    position: relative;
    left: 435rpx;
}
   
   
.audio_control{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    
}
   
.audio_control image{
    margin-top: 50rpx;
    justify-content: center;
    width: 80rpx;
    height: 80rpx; 
    line-height: 80rpx;
    margin-left: 30rpx;
}
.class_list{
    height: 30%;
    display: inline-block;
    /* 开启如下设置才可滚动 */
    overflow: hidden;
    white-space: nowrap;
    padding: 20rpx;
  }
.class_list image{
    width: 90%;
    border-radius: 20rpx;
    margin-right: 30rpx;
}

.comment_Wrap{
    height: 100%;
    margin-top: 20rpx;
}

.comment_user{
    height: 20%;
    display: flex; 
    flex-direction: row;
    align-items: center;
    padding: 20prx;
    margin-bottom: 20rpx;
}

.comment_user image{
    width: 120rpx;
    border-radius: 50%;
    margin-left: 30rpx;
}
.comment_write{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 50rpx;
    border-bottom: 1px solid #666;
}
.comment_list{
    height: 20%;
    display: flex; 
    align-items: center;
    padding: 20prx;
    margin-bottom: 20rpx;
    border-bottom: 1px solid #666;
    font-size: 30rpx;
}
.comment_list image{
    width: 120rpx;
    border-radius: 50%;
    margin-left: 32rpx;
}
.comment_list text{
    margin: 10rpx;
}
.listDetail{
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}