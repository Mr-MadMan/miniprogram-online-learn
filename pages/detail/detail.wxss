page {
    height: 100%;
}

.title image {
    width: 100%;
    display: flex;
    border-radius: 20rpx;
}

.content-text {
    padding: 20rpx;
}

.audio-container {
    height: 15%;
    width: 100%;
    padding-top: 10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1rpx solid #e4e4e4;
    position: fixed;
    bottom: 0;
    background: #fff;
    z-index: 99;
}

.audio-container .text {
    margin-left: 200rpx;
    justify-content: center;
    font-size: 30rpx;
}

.audio-progress {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 10rpx;
}

.audio-progress slider {
    width: 80%;
    margin-left: 50rpx;
}

.audio-progress .musicTime {
    margin-bottom: 20rpx;
    justify-content: end;
    position: relative;
    left: 435rpx;
}

.audio-control {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.audio-control image {
    margin-top: 50rpx;
    justify-content: center;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 30rpx;
}

.class-list {
    margin-top: -20rpx;
    display: inline-block;
    /* 开启如下设置才可滚动 */
    overflow: hidden;
    white-space: nowrap;
    padding: 20rpx;
}

.class-list image {
    width: 80%;
    border-radius: 20rpx;
    margin-right: 30rpx;
}

.comment-user {
    background-color: #fff;
    height: 20%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20prx;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.comment-user image {
    width: 120rpx;
    border-radius: 50%;
    margin-left: 30rpx;
}

.comment-user button {
    width: 130rpx;
    height: 65rpx;
    line-height: 65rpx;
    font-size: 26rpx;
}

.comment-write {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 50rpx;
    border-bottom: 1px solid #cfcfcf;
}

.comment-wrap {
    background-color: #fff;
    margin-top: 20rpx;
    border-radius: 20rpx;
    padding-bottom: 200rpx;
}

.comment-list {
    height: 240rpx;
    display: flex;
    align-items: center;
    padding: 20prx;
    border-bottom: 2px solid #cfcfcf;
    font-size: 30rpx;
}

.comment-list image {
    width: 120rpx;
    border-radius: 50%;
    margin-left: 32rpx;
}

.comment-list text {
    margin: 10rpx;
}

.listDetail {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}